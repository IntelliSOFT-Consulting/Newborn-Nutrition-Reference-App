<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/_10dp"
    android:paddingBottom="@dimen/_100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:text="@string/app_baby_assess"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold" />

        <include
            android:id="@+id/data_interest"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_cues"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_sleep"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_bursts"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_short_feed"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_long_swallow"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_normal_skin"
            layout="@layout/positioning_item" />

        <TextView
            android:id="@+id/tv_title_mum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_15dp"
            android:text="@string/app_mother_assess"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold" />

        <include
            android:id="@+id/data_nipples"
            layout="@layout/positioning_item" />

        <include
            android:id="@+id/data_shape"
            layout="@layout/positioning_item" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>