<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="32dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="6dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/options_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="@dimen/_15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/img_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/_5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary"
                    tools:src="@drawable/ic_close_vd_white_24" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="5dp">

                        <ImageView
                            android:id="@+id/img_feeds"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/round_basic_button"
                            android:padding="10dp"
                            android:src="@drawable/behavior"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/img_needs"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/img_needs"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/round_basic_button"
                            android:padding="10dp"
                            android:src="@drawable/behavior"
                            app:layout_constraintEnd_toStartOf="@+id/img_feeds"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="@dimen/smallmargin"
                            android:text="@string/app_feeding_needs"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@+id/img_needs"
                            app:layout_constraintStart_toStartOf="@+id/img_needs"
                            app:layout_constraintTop_toBottomOf="@+id/img_needs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/smallmargin"
                            android:text="@string/app_feeding_prescribe"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@+id/img_feeds"
                            app:layout_constraintStart_toStartOf="@+id/img_feeds"
                            app:layout_constraintTop_toBottomOf="@+id/img_feeds" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="@dimen/mediumpadding"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="5dp">

                        <ImageView
                            android:id="@+id/img_health"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/round_basic_button"
                            android:padding="10dp"
                            android:src="@drawable/heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/img_data"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/img_data"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/round_basic_button"
                            android:padding="10dp"
                            android:src="@drawable/behavior"
                            app:layout_constraintEnd_toStartOf="@+id/img_health"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimary" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/app_feeding_data"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@+id/img_data"
                            app:layout_constraintStart_toStartOf="@+id/img_data"
                            app:layout_constraintTop_toBottomOf="@+id/img_data" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/smallmargin"
                            android:text="@string/app_health"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@+id/img_health"
                            app:layout_constraintStart_toStartOf="@+id/img_health"
                            app:layout_constraintTop_toBottomOf="@+id/img_health" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_assess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawableStart="@drawable/ic_baseline_add_24"
                    android:drawablePadding="2dp"
                    android:paddingStart="2dp"
                    android:text="@string/action_assess_child"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:cornerRadius="@dimen/_35dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>