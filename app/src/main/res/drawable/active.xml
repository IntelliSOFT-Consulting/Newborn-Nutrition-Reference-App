<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0dp"
                android:color="@android:color/darker_gray" />
            <solid android:color="#00FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"
                android:dashWidth="5dp"
                android:dashGap="0dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>